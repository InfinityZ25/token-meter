def custom_selenium_interaction(driver):
    # Go to google.com
    driver.get("https://www.google.com")
    
    # Wait for the page to load completely before proceeding with next steps
    WebDriverWait(driver, 10).until(EC.presence_of_element_located((By.TAG_NAME, "body")))
    
    # Get the text value of the body element
    return driver.find_element(By.TAG_NAME, "body").text
